* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: Arial, sans-serif;
    background-color: #f4f4f4;
}

/* Grid Container */
.container {
    display: grid;
    grid-template-columns: 3fr 1fr; /* main + sidebar */
    grid-template-rows: auto auto 1fr auto;
    gap: 15px;
    padding: 20px;
}

/* Header */
.header {
    grid-column: 1 / 3;
    background-color: #2c3e50;
    color: white;
    padding: 25px;
    text-align: center;
}

/* Navigation Bar */
.nav {
    grid-column: 1 / 3;
    background-color: #34495e;
    padding: 15px;
    text-align: center;
}

.nav a {
    color: white;
    text-decoration: none;
    margin: 0 15px;
    font-weight: bold;
}

/* Main Content */
.main {
    background-color: white;
    padding: 20px;
}

/* Highlight section */
.highlight {
    margin-top: 20px;
    padding: 15px;
    background-color: #eaf2f8;
    border-left: 5px solid #3498db;
}

/* Sidebar */
.sidebar {
    background-color: #dfe6e9;
    padding: 20px;
}

/* Footer */
.footer {
    grid-column: 1 / 3;
    background-color: #2c3e50;
    color: white;
    text-align: center;
    padding: 15px;
}
